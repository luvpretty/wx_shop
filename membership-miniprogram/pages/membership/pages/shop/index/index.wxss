/* 搜索栏和分类导航栏顶部固定 */
.page_top {
  position: fixed;
  z-index: 9999;
  top: 0px;
  width: 100%;
  height: 160rpx;
}

.page_body {
  position: absolute;
  top: 160rpx;
  width: 100%;
  padding-bottom: 20rpx;
}

/* 修改weui搜索栏样式 */
.weui-search-bar {
  background-color: #fff;
  border-top: 0;
  border-bottom: 0;
}

.weui-search-bar__label {
  background-color: #f8f8f8;
  line-height: 48rpx;
}

.weui-icon-search {
  margin-right: 8rpx;
  margin-top: 4rpx;
}
